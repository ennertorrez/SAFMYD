<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    app:menu="@menu/main"
    tools:context=".Menu.ListaFacturasFragment">

    <RelativeLayout
        android:id="@+id/Rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/lblFactura"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:paddingTop="1dip"
            android:text="Factura:"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NoFactura"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:paddingBottom="1dip"
            android:paddingTop="1dip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Fecha"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/NoFactura"
            android:paddingBottom="1dip"
            android:paddingTop="1dip"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvSincronizar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_fiber_manual_record_black_24dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl2"
        android:layout_below="@+id/Rl1"
        >

        <TextView
            android:id="@+id/Cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl3"
        android:layout_below="@+id/Rl2">
        <TextView
            android:id="@+id/CondicionPago"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:textColor="#9925ff"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lblTotalFactura"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:layout_toRightOf ="@+id/CondicionPago"
            android:paddingBottom="1dip" />
        <TextView
            android:id="@+id/TotalFactura"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblTotalFactura"
            android:paddingBottom="1dip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl4"
        android:layout_below="@+id/Rl3">

        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:paddingBottom="1dip" />

        <TextView
            android:id="@+id/Estado"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:layout_toRightOf="@+id/lblEstado"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblRuta"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="Ruta:"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/Estado"
            android:textSize="16sp"
            android:paddingBottom="1dip" />
        <TextView
            android:id="@+id/Ruta"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:layout_toRightOf="@+id/lblRuta"
            android:textColor="#FF2D8600"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>