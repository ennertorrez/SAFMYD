<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Principal.Barra_cargado" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Iniciando Sesión"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:max="100"
        android:layout_marginTop="50dp"
        android:indeterminateTint="@color/quantum_orange800"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <TextView
             android:id="@+id/TextView01"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
             android:text="Espere..."
             android:textColorHint="@android:color/holo_green_dark"
             android:textSize="20sp"
             android:textStyle="bold"
        android:layout_below="@+id/progressBar1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Café El Norteño"
        android:textColor="@color/colorPrimaryGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/eslogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/colorPrimaryGreen"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@+id/empresa"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/imageView2"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
