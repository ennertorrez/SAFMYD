<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    app:menu="@menu/main"
    tools:context=".Pedidos.ListaPagosFragment">

    <RelativeLayout
        android:id="@+id/Rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Recibo"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:text="Recibo:"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ReciboI"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Fecha"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ReciboI"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CodigoRecibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvSincronizar"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_fiber_manual_record_black_24dp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl2"
        android:layout_below="@+id/Rl1"
        >

        <TextView
            android:id="@+id/Cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl3"
        android:layout_below="@+id/Rl2">

        <TextView
            android:id="@+id/lblTotalRecibo"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:text="Total:"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalRecibo"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblTotalRecibo"
            android:paddingBottom="1dip"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@+id/TotalRecibo"
            android:textSize="16sp"
            android:paddingBottom="1dip" />
        <TextView
            android:id="@+id/Estado"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:layout_toRightOf="@+id/lblEstado"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl5"
        android:layout_below="@+id/Rl3">

        <TextView
            android:id="@+id/lblFacturas"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Facturas:"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:paddingBottom="1dip" />

        <TextView
            android:id="@+id/txtFacturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblFacturas"
            android:maxLines="10"
            android:paddingBottom="1dip"
            android:textColor="#FF2D8600"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>