<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@color/White">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/Rl1"
        android:gravity="center"
        android:background="@color/White">
        <TextView
            android:id="@+id/txtCliente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/Rl1"
        android:id="@+id/Rl5">
        <TextView
            android:id="@+id/txtNombreCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/Rl5"
        android:gravity="center"
        android:id="@+id/Rl3"
        android:background="@color/White">

        <TextView
            android:id="@+id/lblNoVenta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Motivo: "
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/cboMotivoNoVenta"
            android:layout_width="300dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"></Spinner>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/Rl3"
        android:gravity="center"
        android:id="@+id/Rl6"
        android:background="@color/White"></RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/Rl7"
        android:layout_below="@+id/Rl6"
        android:layout_height="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtObservacion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Observaciones"
            android:inputType="text"></EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/Rl7"
        android:gravity="center"
        android:id="@+id/Rl8"
        android:background="@color/White"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rl9"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/Rl8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:background="@color/White"
        android:gravity="center">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/ic_check_circle_black_48dp"
            android:backgroundTint="#1cd100" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="right"
            android:layout_marginStart="125dp"
            android:background="@mipmap/ic_cancel_black_48dp"
            android:backgroundTint="#ff0000" />

    </RelativeLayout>

</RelativeLayout>